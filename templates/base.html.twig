{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Kanban{% endblock %}</title>

    {# miejsce na dodatkowe style z widoków potomnych #}
    {% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    {% endblock %}
  </head>
  <body>
    <header>
      <h1>Kanban</h1>
      {# tu możesz dać menu #}
    </header>

    <main>
      {% block body %}{% endblock %}
    </main>

    <footer>
      <small>&copy; {{ "now"|date("Y") }} Killcode</small>
    </footer>

    {# miejsce na skrypty JS z widoków potomnych #}
    {% block javascripts %}
      <script src="{{ asset('js/app.js') }}"></script>
    {% endblock %}
  </body>
</html>
